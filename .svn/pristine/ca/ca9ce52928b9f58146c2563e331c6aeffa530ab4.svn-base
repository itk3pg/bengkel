			$jumlahJumlahBeliKategori += $JumlahBeli;
			$nomor++;
		}
		$html .= "<tr>
					<td colspan=\"4\">Total Per Kelompok Barang</td>
					<td align=\"right\">".number_format($jumlahQtyKategori,2)."</td>
					<td align=\"right\">".number_format($jumlahHargaNotaKategori,2)."</td>
