					<td align=\"right\">".number_format($jumlahHargaBeli,2)."</td>
					<td align=\"right\">".number_format($jumlahJumlahNota,2)."</td>
					<td align=\"right\">".number_format($jumlahJumlahBeli,2)."</td>
				  </tr>";
		$html .=    "
					</tbody>
				 </table>";
				 
		echo $html;
	}
	
