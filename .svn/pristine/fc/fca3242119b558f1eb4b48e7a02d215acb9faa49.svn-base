	function HapusBarang($data){
		$query = "update barang set is_hapus='1' where kode='".$data['kode']."'";
		$this->db->query($query);

		$query1 = "delete from barang_supplier where barang_kode='".$data['kode']."'";
		$query2 = "delete from harga_barang_supplier where barang_kode='".$data['kode']."'";
		$query3 = "delete from barang_toko where barang_kode='".$data['kode']."'";
		$query4 = "delete from harga_barang_toko where barang_kode='".$data['kode']."'";
		$query5 = "delete from barang where kode='".$data['kode']."'";
		
		$this->db->query($query1);
